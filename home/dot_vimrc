" Don't try to be vi compatible
set nocompatible

syntax on

let mapleader=" "

set visualbell
set termguicolors
set clipboard+=unnamedplus

" Show line numbers
set number
set relativenumber

" Encoding
set encoding=utf-8

" Whitespace
set wrap
set textwidth=88
set expandtab

" Cursor motion
set scrolloff=5
set backspace=indent,eol,start
set matchpairs+=<:> " use % to jump between pairs

" Move up/down editor lines
nnoremap j gj
nnoremap k gk

" Last line
set showmode
set showcmd

set ignorecase
set smartcase

set nohlsearch
set incsearch
set showmatch

" Center Screen when using C-d and C-u
nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

" similar to the above, but for n and N
nnoremap n nzzzv
nnoremap N Nzzzv
