" Don't try to be vi compatible
set nocompatible

syntax on

let mapleader=" "

set visualbell

" Show line numbers
set number
set relativenumber

" Show file stats
set ruler

" Encoding
set encoding=utf-8

" Whitespace
set wrap
set textwidth=88
set expandtab

" Cursor motion
set scrolloff=5
set backspace=indent,eol,start
set matchpairs+=<:> " use % to jump between pairs

" Move up/down editor lines
nnoremap j gj
nnoremap k gk

" Last line
set showmode
set showcmd

" Searching
nnoremap / /\v
vnoremap / /\v
set hlsearch
set incsearch
set smartcase
set showmatch

map <leader><space> :let @/=''<cr> " clear search


" Formatting
map <leader>q gqip
