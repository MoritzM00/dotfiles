#!/bin/bash

set -eufo pipefail

echo "Installing Brew Packages and Casks..."

{{ $taps := list
     "homebrew/cask-fonts"
     "homebrew/bundle" -}}

{{ $brews := list
     "bat"
     "bash"
     "curl"
     "eza"
     "fd"
     "fzf"
     "gdu"
     "gh"
     "ripgrep"
     "git"
     "node"
     "tmux"
     "python3"
     "thefuck"
     "rustup-init"
     "tlrc"
     "vim"
     "pyenv"
     "pyenv-virtualenv"
     "zsh"
     "zsh-autosuggestions"
     "zsh-syntax-highlighting"
     "cookiecutter"
     "btop"
     "tree"
     "dashlane/tap/dashlane-cli"
     "wget" -}}
{{ $casks := list
     "alfred"
     "rectangle"
     "google-earth-pro"
     "microsoft-teams"
     "iterm2"
     "zoom"
     "visual-studio-code"
     "miniforge"
     "font-menlo-for-powerline"
     "font-hack-nerd-font"
     "font-jetbrains-mono"
     "font-jetbrains-mono-nerd-font"
     "font-fira-mono-for-powerline"
     "font-fira-code"
     "font-fira-code-nerd-font" -}}

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($taps | sortAlpha | uniq) -}}
tap "{{ . }}"
{{ end -}}
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF