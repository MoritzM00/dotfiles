{{- $email := promptStringOnce . "email" "Email address" -}}

[diff]
    exclude = ["scripts"]
    
[data]
    email = "{{ .email }}"

[edit]
    command = "code"
    args = ["--wait" ]

[merge]
    command = "code"
    args = ["-wait", 
            "--merge", 
            "{{ "{{" }} .Destination {{ "}}" }}",
            "{{ "{{" }} .Source {{ "}}" }}",
            "{{ "{{" }} .Target {{ "}}" }}",
    ]